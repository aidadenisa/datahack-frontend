{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@core/*": [
                "app/core/*"
            ],
            "@shared/*": [
                "app/shared/*"
            ],
            "@features/*": [
                "app/features/*"
            ],
            "@gf/*": [
                "app/generic-form/*"
            ],
            "@env/*": [
                "environments/*"
            ]
        }
    }
}
